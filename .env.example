# Databender Website Environment Variables
# Copy this file to .env.local and fill in your values

# REQUIRED - Chatbot
ANTHROPIC_API_KEY=sk-ant-...

# OPTIONAL - Email notifications via AWS SES
# On Amplify: Use IAM roles (no credentials needed, just set region/emails)
# Local dev: Set credentials or use ~/.aws/credentials
SES_REGION=us-east-1
SES_FROM_EMAIL=notifications@databender.co
CHAT_NOTIFY_EMAIL=you@databender.co

# Local development only (Amplify uses IAM roles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OPTIONAL - Booking link shared by chatbot
NEXT_PUBLIC_BOOKING_URL=https://calendar.app.google/your-link
