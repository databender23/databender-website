# Databender Website Environment Variables
# Copy this file to .env.local and fill in your values

# ==============================================================
# REQUIRED IN PRODUCTION (app will fail to start without these)
# ==============================================================

# Authentication (generate with: openssl rand -base64 48)
JWT_SECRET=
ADMIN_PASSWORD_HASH=
# Generate hash with: node -e "require('bcryptjs').hash('YOUR_PASSWORD', 12).then(console.log)"

# API Keys
ANTHROPIC_API_KEY=sk-ant-...

# Security tokens for cron jobs and webhooks (generate with: openssl rand -base64 48)
CRON_SECRET=
WEBHOOK_API_KEY=

# ==============================================================
# OPTIONAL - Admin
# ==============================================================
ADMIN_USERNAME=admin

# ==============================================================
# OPTIONAL - AWS Services
# On Amplify: Use IAM roles (no credentials needed, just set region/emails)
# Local dev: Set credentials or use ~/.aws/credentials
# ==============================================================
SES_REGION=us-east-1
SES_FROM_EMAIL=notifications@databender.co
CHAT_NOTIFY_EMAIL=you@databender.co
DYNAMODB_REGION=us-east-1

# Local development only (Amplify uses IAM roles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ==============================================================
# OPTIONAL - Rate Limiting (Upstash Redis)
# Free tier: 10K commands/day
# Get keys at: https://console.upstash.com
# ==============================================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ==============================================================
# OPTIONAL - Bot Protection (Cloudflare Turnstile)
# Free, GDPR-compliant invisible CAPTCHA
# Get keys at: https://dash.cloudflare.com/?to=/:account/turnstile
# ==============================================================
TURNSTILE_SECRET_KEY=
NEXT_PUBLIC_TURNSTILE_SITE_KEY=

# ==============================================================
# OPTIONAL - Email Sequence Security
# Generate with: openssl rand -base64 48
# ==============================================================
UNSUBSCRIBE_SECRET=

# ==============================================================
# OPTIONAL - URLs
# ==============================================================
NEXT_PUBLIC_SITE_URL=https://databender.co
NEXT_PUBLIC_BOOKING_URL=https://calendar.app.google/your-link

# ==============================================================
# OPTIONAL - Notifications
# ==============================================================
SLACK_WEBHOOK_URL=
# Separate webhook for prospect page activity (falls back to SLACK_WEBHOOK_URL)
SLACK_PROSPECT_WEBHOOK_URL=
